{
  "name": "hear-lingo",
  "type": "module",
  "version": "0.1.0",
  "description": "A browser extension for YouTube that helps you learn languages by listening to them.",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "lint": "eslint entrypoints",
    "lint:fix": "eslint entrypoints --fix",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.10",
    "@playwright/test": "^1.48.0",
    "lucide-react": "^0.451.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@wxt-dev/module-react": "^1.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.4",
    "wxt": "^0.19.11"
  }
}
